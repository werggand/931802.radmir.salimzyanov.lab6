@model lab6.Models.FileModel

@{
    ViewData["Title"] = "Edit Folder";
}

<h1>Edit Folder</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="OpenFile" asp-route-id="@Model.Id" asp-route-FolderId="@Model.FolderId">Back</a>
                <input type="submit" value="Edit" class="btn btn-primary btn-sm" style="width:66px;height: 31px;" />
            </div>
        </form>
    </div>
</div>


