@model lab6.Models.TopicModel

@{
    ViewData["Title"] = "Edit Topic";
}

<h3>Edit</h3>
<hr />
<div>
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <h1><label asp-for="Title" class="control-label"></label></h1>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br />
            <div class="card">
                <div class="card-header">
                    <span>*username* // *creation date* // *edit date*</span>
                </div>
                <div class="card-body">
                    <h1><label>Content </label></h1>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input hidden asp-for="DateCreated" class="form-control" value="@Model.DateCreated" />
            </div>
            <div class="form-group">
                <input hidden asp-for="ForumId" class="form-control" value="@Model.ForumId" />
            </div>
            <div class="form-group">
                <input hidden asp-for="AuthorId" class="form-control" value="@Model.AuthorId" />
            </div>
            <div class="form-group">
                <a asp-action="OpenTopic" asp-route-TopicId="@Model.Id">Back</a><input type="submit" value="Save" class="btn btn-primary" style="margin: 0 0 0 15px;" />
            </div>
        </form>
    </div>
</div>
