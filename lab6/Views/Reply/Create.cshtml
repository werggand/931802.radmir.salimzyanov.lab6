@model lab6.Models.ReplyModel

@{
    ViewData["Title"] = "Create Reply";
    var user = Context.User;
    var UserId = user.Claims.First().Value;
    DateTime dt = DateTime.Now;
}

<h1>Create</h1>
<hr />
<div>
    <div>
        <form asp-controller="Reply" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card">
                <div class="card-header">
                    <span>*username* // *creation date* // *edit date*</span>
                </div>
                <div class="card-body">
                    <h2><label>Reply Content</label></h2>
                    <textarea asp-for="Text" class="form-control"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input hidden asp-for="DateCreated" class="form-control" value="@dt.ToString("dddd, dd MMMM yyyy HH:mm:ss")" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="TopicId" class="form-control" value="@ViewBag.tid" />
                <span asp-validation-for="TopicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="AuthorId" class="form-control" value="@ViewBag.uid" />
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reply" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="SingleForum" asp-action="OpenTopic" asp-route-TopicId="@ViewBag.tid">Back to Topic</a>
</div>

