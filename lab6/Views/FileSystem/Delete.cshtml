@model lab6.Models.FolderModel

@{
    ViewData["Title"] = "Delete Folder";
}

<h1>Delete Folder</h1>

<h3>Are you sure you want to delete this folder with all its content?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
            <hr />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Folders)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Folders.Any())
            {

                <ul style="list-style-type:none;padding-left:0px;">
                    @foreach (FolderModel folder in Model.Folders.Reverse())
                    {

                        <li>@folder.Name</li>

                    }
                </ul>
            }
            else
            {
                <span>No folders.</span>
            }
            <hr />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Files)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Files.Any())
            {

            <ul style="list-style-type:none;padding-left:0px;">
                @foreach (FileModel file in Model.Files.Reverse())
                {

                    <li>@file.Name</li>

                }
            </ul>
            } else
            {
                <span>No files.</span>
            }
            <hr />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
        <a asp-action="OpenFolder" asp-route-id="@Model.Id">Back</a>
    </form>
</div>
